<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="./style.css" />
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <div class="margin-top"><h2>EDIT ADMIN OR USER</h2></div>

    <form
      action="/users/editUserPut/<%= user._id %>?_method=PUT "
      method="post"
      class="form-group"
    >
      <input
        type="text"
        name="firstName"
        value="<%= user.firstName %> "
        placeholder="First Name"
        required
        class="form-control"
        pattern="[A-Za-z]{1,100}"
      /><br />
      <input
        type="text"
        name="lastName"
        value="<%= user.lastName %> "
        placeholder="Last Name"
        required
        class="form-control"
        pattern="[A-Za-z]{1,100}"
      /><br />
      <input
        type="email"
        name="email"
        value="<%= user.email %> "
        placeholder="Email"
        required
        class="form-control"
      /><br />

      <select class="select-box form-control" name="type" id="">
        <option value="<%= user.type %> "><%= user.type %></option>
        <option value="admin">admin</option>
        <option value="user">user</option></select
      ><br />
      <input
        type="password"
        name="password"
        value="<%= user.password %> "
        placeholder="password"
        required
        class="form-control"
        pattern=".{8,}"
      /><br />

      <input
        class="btn btn-outline-primary"
        type="submit"
        name=""
        value="Submit"
        id=""
      />
    </form>

    <%- include('../partials/footer'); %>
  </body>
</html>
